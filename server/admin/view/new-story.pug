extends layout

block main-content

    form#add-form(action='https://storytellerapi.herokuapp.com/api/story' method='POST')
        .form-item
        label(for='author') Author: 
        input.float-right(name='author' type='text')
        br
        br
        .form-item
        label(for='section') 
            span Section:
        select(name='section')
            each section in sections
                option(value=section)=section
        br
        br
        .form-item
        br
        label(for='title') Title:
        input.float-right(name='title' type='text' required)
        br
        br
        label(for='subtitle') Subtitle:
        input.float-right(name='subtitle' type='text')
        br
        .form-item
        br
        span Image:
        input(name='image' type='text')
        br
        br
        .form-item
        br
        label(for='content') Content:
        br
        #add-editor
            textarea#myEditor(name='content')
            br
        .form-item
        label(for='all-tags') Tags (separated by a comma, semicolon or empty space): 
        br
        input#all-tags(name='tags' type='text')
        br
        br
        .form-item
        input#save-btn(type='submit' value='SAVE')
        br
    script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script(type='text/javascript' src='https://cdn.jsdelivr.net/npm/froala-editor@2.9.0/js/froala_editor.pkgd.min.js')
    script.
        $(function () {
            $('#myEditor').froalaEditor({
            toolbarInline: false
            })
        })
